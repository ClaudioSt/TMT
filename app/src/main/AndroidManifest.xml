<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.uni_stuttgart.projektinf.tmt">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ChooseGoalActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.ChooseSequenceActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.SaveResultsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.TMTActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.UserFormActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ViewResultsActivity"
            android:screenOrientation="portrait" ></activity>
    </application>

</manifest>