<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.uni_stuttgart.projektinf.tmt.activities.UserFormActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="93dp"
                android:layout_height="81dp"
                android:gravity="center_vertical"
                android:text="Gender:"
                android:textSize="24sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="16dp" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="96dp"
                android:layout_height="match_parent"
                android:text="Female"
                tools:layout_editor_absoluteX="198dp"
                tools:layout_editor_absoluteY="16dp" />

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="92dp"
                android:layout_height="match_parent"
                android:text="Male"
                tools:layout_editor_absoluteX="117dp"
                tools:layout_editor_absoluteY="16dp" />

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="102dp"
                android:layout_height="match_parent"
                android:text="Other"
                tools:layout_editor_absoluteX="291dp"
                tools:layout_editor_absoluteY="16dp" />

        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="89dp"
                android:layout_weight="0.10"
                android:gravity="center_vertical"
                android:text="Age:"
                android:textAlignment="textStart"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:layout_weight="0.04" />

        </LinearLayout>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="99dp"
                android:layout_weight="1.28"
                android:gravity="center_vertical"
                android:text="Sight:"
                android:textSize="24sp" />

            <RadioButton
                android:id="@+id/radioButton7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.98"
                android:text="Glasses" />

            <RadioButton
                android:id="@+id/radioButton4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.73"
                android:text="Contacts" />

            <RadioButton
                android:id="@+id/radioButton8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.01"
                android:text="None" />
        </RadioGroup>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="123dp"
                android:gravity="center_vertical"
                android:text="Handedness:"
                android:textSize="24sp" />

            <RadioButton
                android:id="@+id/radioButton5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.69"
                android:text="Right-Handed" />

            <RadioButton
                android:id="@+id/radioButton6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Left-Handed" />

        </RadioGroup>

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="goToSequenceChooser"
            android:text="OK" />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>